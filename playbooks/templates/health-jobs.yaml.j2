- job-template:
    name: "health-{name}-unit-tests"
    defaults: global
    node: "{node}"
    triggers:
      - zuul
    builders:
      - prepare-workspace
      - shell: mkdir artifacts; cd $ZUUL_PROJECT && ./run_tests.sh
    publishers:
      - console-log

- job-template:
    name: "health-{name}-functional-tests"
    defaults: global
    node: "{node}"
    triggers:
      - zuul
    builders:
      - prepare-workspace
      - shell: cd $ZUUL_PROJECT && ./run_functional-tests.sh
    publishers:
      - console-log
