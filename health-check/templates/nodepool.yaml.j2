diskimages:
  - name: dib-centos-7
    elements:
      - centos-minimal
      - nodepool-minimal
      - sf-zuul-worker
      - sf-jenkins-worker
    env-vars:
      DIB_CHECKSUM: '1'

labels:
  - name: dib-centos-7
    image: dib-centos-7
    min-ready: 3
    providers:
      - name: default

providers:
  - name: default
    cloud: {{ provider_name }}
    clean-floating-ips: true
    image-type: raw
    max-servers: 10
    boot-timeout: 120
    pool: nova
    rate: 2.0
    networks:
      - name: {{ os_slave_net }}
    images:
      - name: dib-centos-7
        diskimage: dib-centos-7
        username: jenkins
        min-ram: 1024
